<div class="all-story">
<div class='search-tag'><%= render "search" %></div>
<% @stories.each do |story| %>
<div class="story-box">
    <div class="story-block story-image" style="background-image: url(<%= rails_blob_path(story.image)%>) "></div>
    <div class="story-block story-tb"> 
      <a href="/stories/<%= story.id %>" class="story-wp story-title">
          <%= story.title %>
      </a>
      <p class="story-wp story-text">
          <%= story.text %>
      </p>
    </div>   
    <div class="story-block">
     <div class="index-image user-parts" style="background-image: url(<%= rails_blob_path(story.user.image)%>) "></div>
     <a href="/users/<%= story.user_id %>" class="story-sub story-un user-parts">
       <%= story.user.nickname %>
     </a> 
     <a href="/stories/<%= story.id %>" class=" story-sub story-read">
       >>>read
     </a>
    </div>
</div>
<% end %>
<%= paginate(@stories) %>
</div>